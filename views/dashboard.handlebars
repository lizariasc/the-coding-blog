 <div class="mb-5 pt-3">
        
        <h2 class="title pb-4">Dashboard</h2><hr>
{{#if posts.length}}
    </div>

    {{#each posts as |post|}}
        {{> post-info post}}
        
            <a href="/dashboard/edit/{{post.id}}"><button class="button mb-5 ml-5 is-dark">Edit Post</button></a>
        </div>
    {{/each}}

{{else}}
<h6 class="pb-4 has-text-centered is-italic">You do not have any posts. Create one to start.</h6>

{{/if}}